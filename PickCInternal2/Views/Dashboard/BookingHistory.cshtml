                            </div>
                        </div>*@
                </div>
                </div>
                    }
</section>
<div class="modal" id="InvoiceModal">
    <div class="modal-dialog modal-md">
        <form id="frmDriver" name="frmDriver">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Booking Invoice</h4>
                </div>
                <div class="modal-body" id="InvoiceModalContent">
                </div>
            </div>
        </form>
    </div>
</div>
@section secscripts{
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/moment-with-locales.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
            $(function () {
                $('#bookingHistory').parent().addClass('active');
                $('.pagination ul li a').attr('href', '#');

                $(document).ready(function () {
                    $('#table_id').dataTable();
                });


                //var date = new Date();
                //var monthStartDay = new Date(date.getFullYear(), date.getMonth(), 1);
                //console.log(monthStartDay);

                //  console.log(monthStartDay);

                $('.dtCss').datetimepicker({
                    icons: {
                        time: 'fa fa-clock-o',
                        date: 'fa fa-calendar',
                        up: 'fa fa-arrow-up',
                        down: 'fa fa-arrow-down',
                        previous: 'fa fa-arrow-left',
                        next: 'fa fa-arrow-right'
                    },
                    format: 'DD/MM/YYYY'
                    //  Datefrom: monthStartDay
                });
                $('#fromdate').on('dp.change', function (e) {
                    $('#todate').data("DateTimePicker").minDate(e.date);
                });

                $('#frmBookingHistory').validate({
                    rules: {
                        'bookings.DateTo': {
                            required: true
                        },
                        'bookings.DateFrom': {
                            required: true
                        }
                        }
                });
                //$('#endDate').blur(function () {
                //    debugger
                //    var startD = $('#startDate').val();
                //    var endD = $('#endDate').val();
                //    if (startD != '' && endD != '')
                //        if (startD >= endD) {
                //            alert("DateTo should be greater than DateFrom");
                //        }
                //});
            });

        function DisplayInvoice(bookingNo) {
            debugger;
            $.ajax({
                url: '@Url.Content("~/Dashboard/BookingInvoice?bookingNo=")' + bookingNo,
                method: 'get',
                contentType: 'text/html',
                success: function (html) {
                    debugger;
                    $('#InvoiceModalContent').html(html);
                    $('#InvoiceModal').modal('show');
                },
                error: function (err) {

                }
            });
        }
        $('#fromdate').on('click', function () {
            $('#todate').data("DateTimePicker").clear();
        });

            function HistorySearch() {
                $('#frmBookingHistory').validate();
                $('#frmBookingHistory').submit();
            }
    </script>


}
