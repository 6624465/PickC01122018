        function GetTripMonitorData() {
            var def = $.Deferred();
            $.ajax({
                url: '@Url.Content("~/Internal/Dashboard/GetTripMonitorInfo")',
                method: 'GET',
                contentType: 'application/json',
                dataType: 'json',
                success: function (res) {
                    def.resolve(res);
                },
                error: function (err) {
                    def.reject(err);
                },
                failure: function (fail) {
                    def.reject(fail)
                }
            });
            return def.promise();
        }


