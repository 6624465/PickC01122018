                        <td style="border-bottom:1px solid rgb(85,85,85); width:30%;font-size: 10px;padding:7px;text-align:right; ">
                            <img src="http://api.pickcargo.in/Images/rupee.png" style="width:10px; height:9px;padding-left:5px;" />
                            &nbsp;  @Model.LoadingUnLoadingCharges
