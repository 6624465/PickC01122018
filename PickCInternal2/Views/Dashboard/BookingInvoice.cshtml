                        <td style="border-bottom:1px solid rgb(85,85,85); width:30%;font-size: 10px;padding:7px;text-align:right; ">
                            <img src="http://api.pickcargo.in/Images/rupee.png" style="width:10px; height:9px;padding-left:5px;" />
                            &nbsp;  @Model.OtherCharges
                        </td>
                    </tr>
                    <tr>
                        <td style="border-bottom:1px solid rgb(85,85,85);border-right:1px solid rgb(85,85,85);width:70%;vertical-align:middle; padding:7px; text-align:right; font-size: 10px; ">   <b> Other Charges Total  </b></td>
                        <td style="border-bottom:1px solid rgb(85,85,85); width:30%;font-size: 10px; padding:7px;text-align:right; ">
                            <b>
